@{
    ViewData["Title"] = "Add Quesiton";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model QuestionModel
<form action="Edit" method="post">
    <input type="hidden" asp-for="QuestionId" value="@Model.QuestionId">
    <div class="row justify-content-center">

        <div class="card col-8 ">
            <div class="card-header "><h1 class="card-title text-center">Soruyu Düzenle</h1></div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="QuestionTitle" class="form-label">Title</label>
                    <textarea type="text" asp-for="QuestionTitle" class="form-control"> </textarea>
                    <span asp-validation-for="QuestionTitle"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="QuestionText" class="form-label">Content</label>
                    <textarea type="text" asp-for="QuestionText" class="form-control"></textarea>
                    <span asp-validation-for="QuestionText"> </span>
                </div>
                <div class="mb-3">
                </div>

                <button type="submit" class="btn btn-primary">Edit</button>

            </div>

        </div>
        <div class="col-4">
            <h3> Categoriler</h3>
            <ul>


                @foreach (var i in ViewBag.Categories)
                {

                    <li>
                        <div class="form-check form-radio my-3">


                            <input type="radio"  class=" form-check-input" name="CategoryId" id="category_@i.CategoryId" value="@i.CategoryId">
                            <label class="form-check-label" for="category_@i.CategoryId">@i.CategoryName</label>
                        </div>
                    </li>
                }

            </ul>
        </div>

    </div>

</form>

